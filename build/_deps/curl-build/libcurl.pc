prefix=/usr/local
exec_prefix=${prefix}
libdir=/usr/local/lib
includedir=${prefix}/include
supported_protocols="HTTP HTTPS IPFS IPNS SCP SFTP"
supported_features="alt-svc AsynchDNS HSTS HTTP2 HTTPS-proxy IDN IPv6 Largefile libz NTLM SSL threadsafe UnixSockets"

Name: libcurl
URL: https://curl.se/
Description: Library to transfer files with ftp, http, etc.
Version: 8.10.1
Requires: 
Requires.private: libidn2,zlib,libnghttp2,libssh2
Libs: -L${libdir} -lcurl 
Libs.private: -framework SystemConfiguration -framework Security -framework CoreFoundation -framework CoreServices -L/opt/homebrew/Cellar/libnghttp2/1.64.0/lib -L/opt/homebrew/Cellar/libssh2/1.11.1/lib -lidn2 -lz -lnghttp2 -lssh2
Cflags: -I${includedir} 
Cflags.private: -DCURL_STATICLIB
